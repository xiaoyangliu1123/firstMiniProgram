.container {
  padding: 30rpx;
}

.input-box {
  width: 100%;
  height: 200rpx;
  border: 1px solid #ccc;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-sizing: border-box;
}

.result {
  margin-top: 30rpx;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
}

.page {
  padding: 20rpx;
}

.page-body {
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
}

.input-section {
  margin-bottom: 20rpx;
}

.input-area {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  box-sizing: border-box;
}

.button-section {
  margin: 20rpx 0;
}

.polish-button {
  background: #1AAD19;
  color: #fff;
}

.result-section {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
}

.result-title {
  font-weight: bold;
  margin-bottom: 10rpx;
}

.result-content {
  margin-bottom: 20rpx;
}

.tags-container {
  margin-top: 30rpx;
  border-top: 1rpx solid #eee;
  padding-top: 20rpx;
}

.tags-title {
  font-size: 28rpx;
  margin-bottom: 16rpx;
  color: #666;
}

.tags-list {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.tag {
  padding: 4rpx 12rpx;
  background: #e8f5e9;
  color: #2e7d32;
  border-radius: 20rpx;
  font-size: 24rpx;
} 