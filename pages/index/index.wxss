.container {
  padding: 30rpx;
}

.input-box {
  width: 100%;
  height: 200rpx;
  border: 1px solid #ccc;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-sizing: border-box;
}

.result {
  margin-top: 30rpx;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
}

.page {
  height: 100vh;
  background: #f6f6f6;
}

.main-content {
  padding: 32rpx;
}

.input-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
}

.input-area {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  box-sizing: border-box;
}

.button-section {
  margin: 32rpx 0;
}

.submit-btn {
  width: 100% !important;
}

.result-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-top: 32rpx;
  font-size: 28rpx;
  line-height: 1.5;
}

.result-title {
  font-weight: bold;
  margin-bottom: 10rpx;
}

.result-content {
  margin-bottom: 20rpx;
}

.tags-container {
  margin-top: 30rpx;
  border-top: 1rpx solid #eee;
  padding-top: 20rpx;
}

.tags-title {
  font-size: 28rpx;
  margin-bottom: 16rpx;
  color: #666;
}

.tags-list {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.tag {
  padding: 4rpx 12rpx;
  background: #e8f5e9;
  color: #2e7d32;
  border-radius: 20rpx;
  font-size: 24rpx;
} 