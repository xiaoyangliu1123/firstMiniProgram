.container {
  padding: 30rpx;
}

.input-box {
  width: 100%;
  height: 240rpx;
  padding: 20rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.input-box:focus {
  border-color: #07c160;
  box-shadow: 0 0 0 2rpx rgba(7, 193, 96, 0.1);
}

.result {
  margin-top: 30rpx;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
}

.page {
  min-height: 100vh;
  background: #f6f6f6;
}

.main-content {
  padding: 24rpx;
}

.input-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.input-area {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  box-sizing: border-box;
}

.button-section {
  margin: 32rpx 0;
  padding: 0 32rpx;
}

.submit-btn {
  width: 100% !important;
  height: 88rpx !important;
  line-height: 88rpx !important;
  font-size: 32rpx !important;
}

.result-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-top: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.result-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 24rpx;
  padding-left: 16rpx;
  border-left: 6rpx solid #07c160;
}

.result-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  padding: 24rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.tags-container {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 2rpx solid #f0f0f0;
}

.tags-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.tags-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  padding: 8rpx 20rpx;
  background: #e8f5e9;
  color: #07c160;
  border-radius: 24rpx;
  font-size: 24rpx;
  transition: all 0.3s ease;
}

.tag:active {
  background: #d5ecd7;
} 